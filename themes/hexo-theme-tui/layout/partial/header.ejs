<!-- TUI-style header with title bar -->
<div class="tui-header" box-="square">
  <div class="tui-title-bar">
    <span class="tui-title" variant-="lavender"><%= config.title %></span>
    <div class="tui-controls">
      <a href="<%= config.root %>" is-="button" variant-="blue" size-="small">Home</a>
      <a href="<%= config.root %>archives" is-="button" variant-="green" size-="small">Archives</a>
      <% if (theme.menu) { %>
        <% for (var i in theme.menu) { %>
          <a href="<%- url_for(theme.menu[i]) %>" is-="button" variant-="yellow" size-="small"><%= i %></a>
        <% } %>
      <% } %>
    </div>
  </div>
</div>

<style>
  .tui-header {
    margin-bottom: 2lh;
    padding: 0.5lh 1ch;
  }
  .tui-title-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .tui-title {
    font-weight: var(--font-weight-bold);
    color: var(--mauve);
  }
  .tui-controls {
    display: flex;
    gap: 1ch;
  }
</style>