  <style>
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      margin: 0;
      background-color: #111;
    }
    .page {
      display: flex;
      flex-direction: column;
      flex-grow: 1;
      width: 100%;
      max-width: 1440px;
      margin-left: auto;
      margin-right: auto;
      padding-left: 1rem;
      padding-right: 1rem;
      background: var(--background0);
      box-sizing: border-box;
    }

    .main-archive-box {
      flex-grow: 1;
      display: flex;
      flex-direction: column;
    }

    .header { 
      display: flex;
      justify-content: space-between; 
    }
    .text-right { 
      text-align: right;
    }
    #buttons { 
      display: flex; 
      justify-content: flex-end; 
    }
    footer > .column {
      display: flex;
      justify-content: space-between;
    }
    .main-archive-box img {
      max-width: 100%;
      margin-top: 1lh;
      margin-bottom: 1lh;
    }
    .main-archive-box a {
      /* color: inherit; */
    }

    div[box-="square"] {
      padding-left: 2ch;
      padding-right: 2ch;
    }

    #light-dark-switch {
      cursor: pointer;
    }

    .mt-2 {
      margin-top: 2ch;
    }
    .mt-1 {
      margin-top: 1ch;
    }

    .mv-1 {
      margin-top: 1ch;
      margin-bottom: 1ch;
    }
    .mh-1 {
      margin-left: 1ch;
      margin-right: 1ch;
    }
    .mv-2 {
      margin-top: 2ch;
      margin-bottom: 2ch;
    }
    .mh-2 {
      margin-left: 2ch;
      margin-right: 2ch;
    }
  </style>

  <!-- Favicon
  ––––––––––––––––––––––––––––––––––––––––––––––––––-->
  <link rel="icon" type="image/png" href="<%- theme.favicon %>">

  <% if (theme.picjs) { %>
  <script src="<%- theme.picjs %>" defer></script>
  <% } %>

  <% if(config.search){ %>
  <script src="/js/search.min.js" defer></script>
  <% } %>

</head>

<body>
  <div class="page">
    <%- partial('partial/header') %>
    <%- body %>

    <% if(config.search){ %>
      <%- partial('partial/search') %>
    <% } %>

    <%- partial('partial/footer') %>
  </div>
